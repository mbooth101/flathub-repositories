{
    "id": "com.example.TestJava",
    "branch": "master",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.openjdk9",
        "org.freedesktop.Sdk.Extension.openjdk10",
        "org.freedesktop.Sdk.Extension.openjdk11"
    ],
    "modules": [
        {
            "name": "test_jdks",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "file",
                    "path": "jdk_extension_test.sh"
                }
            ],
            "build-commands": [
		"for jdk in /usr/lib/sdk/openjdk* ; do ./jdk_extension_test.sh $jdk ; done"
            ]
        },
        {
            "name": "test_shim_maven_build",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mbooth101/flatpak-dev-shim.git"
                },
                {
                    "type": "file",
                    "path": "m2-repo.tar.gz"
                }
            ],
            "build-commands": [
		"tar xf m2-repo.tar.gz",
		"source /usr/lib/sdk/openjdk11/enable.sh ; mvn -B -o verify -Dmaven.repo.local=$(pwd)/m2-repo"
            ]
        }
    ],
    "finish-args": [
	"--share=ipc",
	"--filesystem=home"
    ]
}
